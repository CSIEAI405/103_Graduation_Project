<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>E_Home</servlet-name>
		<servlet-class>com.example.E_HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>E_Home</servlet-name>
		<url-pattern>/record.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RecordSensor</servlet-name>
		<servlet-class>com.example.RecordSensor</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RecordSensor</servlet-name>
		<url-pattern>/RecordSensor.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ControlHomeAppliance</servlet-name>
		<servlet-class>com.example.ControlHomeAppliance</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControlHomeAppliance</servlet-name>
		<url-pattern>/ControlHomeAppliance.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>E-Home.jsp</welcome-file>
	</welcome-file-list>
</web-app>
